{
  "name": "tsusi",
  "module": "src/index.ts",
  "types": "index.d.ts",
  "type": "module",
  "author": "tkgling",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsshogi/tsusi.git"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "prebuild": "bun tsc --emitDeclarationOnly --isolatedDeclarations",
    "build": "bun build src/index.ts --minify --outdir dist --target bun",
    "prepare": "husky",
    "lint": "bunx @biomejs/biome lint --write src",
    "format": "bunx @biomejs/biome format --write src",
    "check": "bunx @biomejs/biome check --write src"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@types/bun": "latest",
    "commitizen": "^4.3.0",
    "husky": "^9.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tsconfig.json"
  ]
}